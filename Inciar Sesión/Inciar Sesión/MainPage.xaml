<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inciar_Sesión.MainPage">

    <Grid>
        <Image Source="studiorecord.jpg" Aspect="AspectFill"/>

        <BoxView Color="#9b9b9b" Opacity="0.5"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout>
                <Label Text="Rock altenative indie progressive" TextColor="White"/>

                <Entry Placeholder="Correo Electronico" x:Name="EmailTxt" PlaceholderColor="White" TextColor="White"/>
                <Entry Placeholder="Contraseña" x:Name="PassTxt" PlaceholderColor="White" TextColor="White"/>
                <Entry Placeholder="Respuesta" x:Name="AnsTxt" PlaceholderColor="White" TextColor="White"/>
                <Button Text="Iniciar Sesión" x:Name="Start"  Clicked="Start_Clicked" BackgroundColor="Gray" TextColor="#000000" CornerRadius="15"/>
                <Button Text="Cerrar Sesión" x:Name="Start"  Clicked="Close_Clicked" BackgroundColor="Gray" TextColor="#000000" CornerRadius="15"/>
            </StackLayout>
        </Grid>
    </Grid>
   </ContentPage>
