<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovies.Preestrenos" Title="Proximos Estrenos">
    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackLayout>
                <Label Text="¡PROXIMOS ESTRENOS QUE PODRAS VER!"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <StackLayout>
                    <Label Text=""/>
                    <Label Text="¡BATMAN!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="EndAndExpand" />
                    <Image Source="Batman.jpg"/>
                </StackLayout>
                <StackLayout>
                    <Label Text=""/>
                    <Label Text="¡Minions 2: The Rise of Gru!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="EndAndExpand" />
                    <Image Source="Minion.jpeg"/>
                </StackLayout>
            </StackLayout>




        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>